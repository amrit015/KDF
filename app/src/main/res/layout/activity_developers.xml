<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/silptech" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android version 1.3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© Property of Silptech" />

    <LinearLayout
        android:id="@+id/silptech_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_click_background"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/developer_silptech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silptech"
            android:textColor="@color/black"

            android:textSize="20dp" />

        <ImageView
            android:id="@+id/developer_silptech_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_email_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/company_facebook_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_click_background"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook Page"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:src="@drawable/ic_action_facebook" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Developers :"
        android:textColor="@color/material_palette_dark"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/developer_a_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeveloperA"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/developer_b_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeveloperB"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_click_background"
        android:padding="3dp">

        <TextView
            android:id="@+id/developer_c_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeveloperC"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/developer_b_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:src="@drawable/ic_phone_black_24dp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>